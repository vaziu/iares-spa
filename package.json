{
	"name": "iares-template-spa",
	"version": "2.0.0",
	"type": "module",
	"scripts": {
		"start": "bun run build",
		"dev": "bun run lint && bun run build",
		"lint": "bun biome check --fix --verbose",
		"test": "mocha ./dist/**/*.spec.js",
		"test:watch": "pnpm run test && pnpm run test:watcher",
		"test:coverage": "pnpm run coverage:build && c8 --reporter=text --reporter=lcov  mocha  ./dist/tests/**",
		"coverage:build": "bun ./build.config.ts",
		"build": "bun ./build.config.ts",
		"api:mock": "json-server --watch api/db.json",
		"test:watcher": "run-when-changed --watch './dist/**/*.js' --exec 'mocha  ./dist/**/*.spec.js %s'"
	},
	"aliases": {
		"@/store": [
			"./dist/store/index.ts"
		],
		"@/components/*": [
			"./dist/components"
		],
		"@/utils/*": [
			"./dist/utils"
		],
		"@/services/*": [
			"./dist/services"
		],
		"@/assets/*": [
			"./dist/assets"
		],
		"@/mock/*": [
			"./dist/mock"
		],
		"@/tests/*": [
			"./dist/tests"
		]
	},
	"ts-standard": {
		"project": "./tsconfig.json"
	},
	"nyc": {
		"extension": [
			".ts"
		]
	},
	"dependencies": {
		"fam-code-ui": "^0.0.11",
		"htm": "^3.1.1",
		"iares": "2.0.3",
		"markdown-it": "^14.1.0",
		"prismjs": "^1.29.0"
	},
	"devDependencies": {
		"@esm-bundle/chai": "4.3.4-fix.0",
		"@mdx-js/esbuild": "^3.0.1",
		"@types/bun": "^1.2.18",
		"@types/chai": "^4.3.17",
		"@types/glob": "^9.0.0",
		"@types/jsdom": "^21.1.7",
		"@types/markdown-it": "^14.1.2",
		"@types/mocha": "^10.0.7",
		"@types/node": "^18.19.43",
		"@types/prismjs": "^1.26.4",
		"biome": "^0.3.3",
		"bun": "^1.2.18",
		"c8": "^7.14.0",
		"chai": "^4.5.0",
		"dotenv": "^16.4.5",
		"esbuild": "^0.21.5",
		"esbuild-copy-static-files": "^0.1.0",
		"glob": "^9.3.5",
		"global-jsdom": "^8.8.0",
		"htmlhint": "^1.1.4",
		"http-server": "^14.1.1",
		"install-peerdeps": "^3.0.3",
		"jsdom": "^21.1.2",
		"json-server": "^0.17.4",
		"jsonc-parser": "^3.3.1",
		"mocha": "^10.7.0",
		"run-when-changed": "^2.1.0",
		"shx": "^0.3.4",
		"stylint": "^2.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3",
		"ws": "^8.18.0"
	}
}
